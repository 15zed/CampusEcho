<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hgc.campusechocountservice.mapper.LikesMapper">

    <insert id="insertLikes">
        INSERT INTO t_likes(infoId,userId,time) VALUES(#{param1},#{param2},now());
    </insert>

    <delete id="deleteLikes">
        DELETE FROM t_likes WHERE infoId = #{param1} AND userId = #{param2};
    </delete>

    <delete id="deleteLikesByInfoId">
        DELETE FROM t_likes WHERE infoId = #{param1};
    </delete>

    <select id="getInfoIdList" resultType="java.lang.Integer">
        SELECT infoId FROM t_likes;
    </select>

    <select id="getInfoIdListByUserId" resultType="java.lang.Integer">
        SELECT infoId FROM t_likes WHERE userId = #{param1};
    </select>
</mapper>